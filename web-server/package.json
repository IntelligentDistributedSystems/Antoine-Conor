{
  "name": "web-server",
  "version": "1.0.0",
  "description": "Host remote web-GUI for our simulation.",
  "main": "app.js",
  "scripts": {
    "build": "npm run build-js && npm run build-css && npm run clean",
    "build-js": "npm run babelify && npm run browserify",
    "babelify": "babel client/src/js --presets es2015 -d client/dist/js",
    "browserify": "browserify client/dist/js/main.js -o client/static/js/bundle.js --debug",
    "build-css": "sassc client/src/sass/stylesheet.scss client/static/css/stylesheet.css 2> /dev/null || true",
    "clean": "rm client/dist -rf"
  },
  "author": "Antoine Murat",
  "license": "ISC",
  "dependencies": {
    "express": "^4.15.2",
    "socket.io": "^1.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^14.3.0"
  }
}
